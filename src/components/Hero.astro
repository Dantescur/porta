---
import { Icon } from "astro-icon/components";
---

<section class="min-h-[calc(100vh-80px)] flex items-center">
  <div
    class="container px-6 sm:px-8 lg:px-12 flex flex-col lg:flex-row items-center justify-between"
  >
    <!-- Left Side: Content -->
    <div class="max-w-2xl lg:max-w-4xl font-sans text-center lg:text-left">
      <h1
        class="text-4xl sm:text-5xl lg:text-6xl/none font-bold tracking-tight"
      >
        <span class="block text-text">Hi, I'm</span>
        <span class="gradient-text block mt-2 sm:mt-3">Cesar Daniel</span>
      </h1>
      <p
        class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl text-text/80 leading-relaxed"
      >
        Crafting exceptional digital experiences with modern web technologies
      </p>
      <div
        class="mt-6 sm:mt-10 flex flex-col sm:flex-row gap-3 sm:gap-4 font-mono"
      >
        <a
          href="#work"
          class="w-full sm:w-auto text-center rounded-lg bg-accent px-4 sm:px-6 py-3 text-sm sm:text-base font-semibold text-surface shadow-theme hover:bg-accent/90"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="w-full sm:w-auto text-center rounded-lg border border-border px-4 sm:px-6 py-3 text-sm sm:text-base font-semibold text-text shadow-theme hover:bg-surface"
        >
          Contact Me
        </a>
      </div>
    </div>

    <!-- Right Side: Stats -->
    <div
      class="hidden lg:block w-1/3 p-6 bg-surface/50 rounded-lg shadow-lg stats-section"
    >
      <ul class="space-y-4 text-text/80">
        <li class="flex items-center gap-2">
          <Icon
            name="heroicons:check-circle-20-solid"
            class="w-5 h-5 text-accent"
          />
          <span>2+ Years of Experience</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon
            name="heroicons:check-circle-20-solid"
            class="w-5 h-5 text-accent"
          />
          <span>6+ Completed Projects</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon
            name="heroicons:check-circle-20-solid"
            class="w-5 h-5 text-accent"
          />
          <span>Proficient in Vue, React and Astro</span>
        </li>
      </ul>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .stats-section {
    animation: fadeIn 0.6s ease-in-out;
  }
</style>
