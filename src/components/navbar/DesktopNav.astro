---
import { Icon } from "astro-icon/components";
const props = Astro.props;
const links = props.links as { name: string; href: string }[];
---

<div class="hidden md:flex gap-6 lg:gap-8 items-center">
  {
    links.map((link) => (
      <a
        href={link.href}
        class="nav-link relative text-sm lg:text-base text-text hover:text-accent transition-all duration-300 font-medium group"
      >
        {link.name}
        <!-- Underline animation -->
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"></span>
      </a>
    ))
  }
</div>

<style>
  .nav-link.active {
    color: rgb(var(--color-accent));
  }
  
  .nav-link.active span {
    width: 100%;
  }
  
  .nav-link:hover {
    transform: translateY(-1px);
  }
</style>