---
import { Icon } from "astro-icon/components";
const props = Astro.props;
const links = props.links as { name: string; href: string }[];
---

<div
  class="md:hidden hidden transition-all duration-300 ease-in-out backdrop-blur-md border-t border-border/20"
  id="mobile-menu"
>
  <div class="px-4 pt-2 pb-4 space-y-1">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="mobile-nav-link block px-4 py-3 text-base text-text hover:bg-accent/10 hover:text-accent rounded-xl transition-all duration-300 font-medium border border-transparent hover:border-accent/20"
        >
          {link.name}
        </a>
      ))
    }
  </div>
</div>

<style>
  .mobile-nav-link.active {
    background-color: rgba(var(--color-accent), 0.1);
    color: rgb(var(--color-accent));
    border-color: rgba(var(--color-accent), 0.2);
  }
</style>