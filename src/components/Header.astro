---
import DesktopNav from "./navbar/DesktopNav.astro";
import MobileNav from "./navbar/MobileNav.astro";
import MobileMenuButton from "./navbar/MobileMenuButton.astro";
import avatar from "../assets/avataar.svg";

const links = [
  { name: "Projects", href: "#work" },
  { name: "Skills", href: "#skills" },
  { name: "About Me", href: "#soft-skills" },
  { name: "Contact", href: "#contact" },
];
---

<div class="sticky top-0 backdrop-blur-md z-50 border-b border-border/10">
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center"
  >
    <a href="#hero" class="flex items-center gap-3 group">
      <img
        src={avatar.src}
        alt="Cesar Daniel Avatar"
        class="w-12 h-12 rounded-full ring-2 ring-accent/20 group-hover:ring-accent/40 transition-all duration-300 group-hover:scale-105"
      />
      <span class="hidden sm:block text-lg font-semibold text-text group-hover:text-accent transition-colors">
        CDaniel
      </span>
    </a>

    <MobileMenuButton />

    <DesktopNav links={links} />
  </div>

  <MobileNav links={links} />
</div>

<script>
  import { setupMobileMenu } from "../assets/mobile-setup";
  setupMobileMenu();
</script>

<script type="text/partytown" src="/setup-scroll.js"></script>

<style>
  .backdrop-blur-md {
    background: rgba(var(--color-background), 0.8);
  }
  
  .sticky {
    transition: all 0.3s ease;
  }
  
  nav a.active {
    color: rgb(var(--color-accent));
    font-weight: 600;
  }
</style>